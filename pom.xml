    <modelVersion>4.0.0</modelVersion>

    <groupId>de.legendsrising</groupId>
    <artifactId>wildfly-aurelia</artifactId>
    <version>1.0</version>
    <name>wildfly-aurelia</name>
    <packaging>pom</packaging>

    <modules>
